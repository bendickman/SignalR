@{
    ViewBag.Title = "Home Page";
}

<h1>Signal R Demo</h1>


<div class="row">

    <div class="col-md-4">

        <input type="text" placeholder="Enter Message..." data-bind="value:message" />
        <button class="btn btn-primary" data-bind="click:sendMessage">Send</button>

    </div>

    <div class="messages">
        <h1>Messages</h1>
        <div class="col-md-8">
            <div data-bind="foreach:messages">
                <div data-bind="text: $data"></div>
            </div>
        </div>
    </div>

</div>

<div class="row" data-bind="foreach:counters">
    <div class="col-md-12">
        <h2 data-bind="text:name"></h2>
        <canvas width="800" height="100" data-bind="attr: { 'id' : name }"></canvas>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <script src="~/SignalR/hubs"></script>
    <script src="~/bower_components/knockout/dist/knockout.js"></script>
    <script src="~/Scripts/smoothie/smoothie.js"></script>
    <script src="~/Scripts/perfSurf.js"></script>
}